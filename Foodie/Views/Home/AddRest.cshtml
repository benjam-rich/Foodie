@{
    ViewBag.Title = "Add Great Restaurants to the List HERE";
}


@model Foodie.Models.ApplicationResponse
<!--Here is the form to add new restaurants. It redirects to a confirmation page upon submission-->
<form asp-action="AddRest" method="post">
    <div>
        <label asp-for="Name">Your Name: </label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="RName">Restaurant Name: </label>
        <input asp-for="RName" />
    </div>
    <div>
        <label asp-for="FDish">Favorite Dish: </label>
        <input asp-for="FDish" />
    </div>
    <div>
        <label asp-for="PNumber">Restaurant Phone Number: </label>
        <input asp-for="PNumber" />
    </div>
    
    <button type="submit">Submit Restaurant</button>
    <div asp-validation-summary="All"></div>
</form>
